= form_for(@group,:html => {:id => "group_page",:class => "group_page"}) do |f|
  - if @group.errors.any? 
    %div#error_explanation
      %h2== #{pluralize(@group.errors.count, "error")} prohibited this group from being saved:
      
      %ul
        - @group.errors.full_messages.each do |msg|
          %li
            = msg
  %table{:class => "listing",:border => "0",:cellspacing => "0",:cellpadding => "0"}
  
    %thead
      %tr
        %td{:colspan => "2"} Group Form
         
    %tbody
      %tr
        %td
          = f.label :name ,:class => "label"
          = f.text_field :name ,:class => "text-field",:size => 30 
      %tr
        %td{:colspan => "2"} 
          = f.submit

